@model CoiNYC.Domain.Dashboard.DashboardDto
@{
    Layout = null;
}
<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>@string.Format(R.Last_0_Products, Model.LastItemCount)</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <table class="table table-hover no-margins">
            <thead>
                <tr>
                    <th>@R.Code</th>
                    <th>@R.Category</th>
                    <th>@R.Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model.LastProducts)
                {
                    <tr>
                        <td><a href="@Url.Action("Edit","Product",new { area="admin",id=prod.Id})" target="_blank"><span class="label label-info">@prod.Code</span></a></td>
                        <td>@prod.CategoryName</td>
                        <td>@*<i class="fa fa-clock-o"></i>*@ @prod.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>