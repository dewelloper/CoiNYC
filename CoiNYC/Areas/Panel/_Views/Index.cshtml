@model CoiNYC.Domain.Dashboard.DashboardDto
@{
    Layout = "~/Areas/Panel/_Views/_PanelLayout.cshtml";
}
<div class="wrapper wrapper-content">
    @Html.Partial("_Filter", Model)
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-success pull-right">@Model.FilterDate.Max.Value.Subtract(Model.FilterDate.Min.Value).Days @R.Day_s</span>
                    <h5>@R.Income</h5>
                </div>
                <div class="ibox-content">
                    @foreach (var income in Model.Incomes)
                    {
                        <h1 class="no-margins">@income.Value.ToString("0.00") @income.Key</h1>
                    }
                    <div class="stat-percent font-bold text-success"> @Model.CompletedOrderCount <i class="fa fa-bolt"></i></div>
                    <small>@R.CompletedOrders</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">@Model.FilterDate.Max.Value.Subtract(Model.FilterDate.Min.Value).Days @R.Day_s</span>
                    <h5>@R.WaitingOrders</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@Model.WaitingOrderCount</h1>
                    <div class="stat-percent font-bold text-navy"> <i class="fa fa-level-up"></i></div>
                    @*<small>New visits</small>*@
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-info pull-right">@Model.FilterDate.Max.Value.Subtract(Model.FilterDate.Min.Value).Days @R.Day_s</span>
                    <h5>@R.RequestForms</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@Model.RequestFormCount</h1>
                    <div class="stat-percent font-bold text-info"> <i class="fa fa-level-up"></i></div>
                    @*<small>New orders</small>*@
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-danger pull-right">@Model.FilterDate.Max.Value.Subtract(Model.FilterDate.Min.Value).Days @R.Day_s</span>
                    <h5>@R.RegisteredUsers</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@Model.RegisteredUserCount</h1>
                    <div class="stat-percent font-bold text-danger"> <i class="fa fa-level-up"></i></div>
                    @*<small>In first month</small>*@
                </div>
            </div>
        </div>
    </div>
    @*@Html.Partial("_DBWaitingOrders", Model)*@
    <div class="row">
        <div class="col-lg-4">
            @Html.Partial("_DBLastProducts", Model)
        </div>
        <div class="col-lg-5">
            @Html.Partial("_DBLastOrders", Model)
        </div>
        <div class="col-lg-3">
            @Html.Partial("_DBLastUsers", Model)
        </div>
    </div>
</div>